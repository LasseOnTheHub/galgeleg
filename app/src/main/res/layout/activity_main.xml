<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lbirk.galgespil.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galge-Spillet"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/HeadlineText" />

    <Button
        android:text="Spil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/startGameButton"
        android:layout_below="@+id/HeadlineText"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="HjÃ¦lp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/startHelpButton"
        android:layout_below="@+id/startGameButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Indstillinger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/startSettingsButton"
        android:layout_below="@+id/startHelpButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startStatsButton"
        android:layout_below="@+id/startSettingsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
